<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h3>Add a tag to my <%= @plant.name %></h3>
      <%= simple_form_for [@plant, @plant_tag] do |f| %>
        <%= f.association :tag, collection: Tag.all, input_html: { multiple: true, class:'multiple-select' }, include_hidden: false %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
